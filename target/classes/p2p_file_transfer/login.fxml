<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p2p_file_transfer.LoginController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <children>
            <VBox styleClass="login-card" spacing="15.0" maxWidth="350.0">
               <children>
                  <Label text="Welcome Back" styleClass="header-label" alignment="CENTER" maxWidth="Infinity"/>
                  
                  <Label text="Username" />
                  <TextField fx:id="usernameField" promptText="Enter your username" />
                  
                  <Label text="Password" />
                  <PasswordField fx:id="passwordField" promptText="Enter your password" />
                  
                  <Label fx:id="statusLabel" styleClass="status-label" wrapText="true" minHeight="20.0" />
                  
                  <VBox spacing="10.0" style="-fx-padding: 10 0 0 0;">
                      <Button fx:id="loginButton" maxWidth="Infinity" defaultButton="true" mnemonicParsing="false" onAction="#handleLogin" text="Login" style="-fx-base: #3f51b5;"/>
                      <Button fx:id="registerButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleRegister" text="Register Account" />
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</GridPane>
