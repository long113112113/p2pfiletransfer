<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p2p_file_transfer.PrimaryController">
   <children>
      <Label styleClass="header-label" text="P2P File Transfer" />
      
      <!-- Chat Display Area -->
      <TextArea fx:id="txtChatArea" editable="false" prefHeight="400.0" prefWidth="600.0" wrapText="true" VBox.vgrow="ALWAYS" />
      
      <!-- Connection Input -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
             <Label text="Receiver IP:" />
            <TextField fx:id="txtIpAddress" promptText="Enter IP (e.g., 192.168.1.5)" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      
      <!-- Message Input -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#openFileChooser" text="ðŸ“Ž" />
            <TextField fx:id="txtMessage" onAction="#sendMessage" promptText="Type a message..." HBox.hgrow="ALWAYS" />
            <Button fx:id="btnSend" minWidth="80.0" defaultButton="true" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
